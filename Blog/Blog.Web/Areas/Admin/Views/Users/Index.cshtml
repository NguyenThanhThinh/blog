
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between flex-wrap flex-md-row align-items-center pb-2 mb-3 border-bottom">
    <h3>User</h3>
    <div class="mb-2 mb-md-0">
        <a asp-controller="Users" asp-action="Create"
           class="btn btn-sm btn-primary">
            <i class="fa fa-plus"></i> Create new
        </a>
    </div>
</div>

<div class="mb-3">
    <table class="table table-bordered table-sm table-responsive-sm" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Is Enabled</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr></tr>
        </tfoot>
    </table>
</div>

